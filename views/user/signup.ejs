<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(to right, #b92b27, #1565c0);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            border: none;
            background: #fff;
            text-align: center;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 325px; /* Updated width to 325px */
            max-width: 80%;
            box-sizing: border-box;
        }

        .box input[type="text"],
        .box input[type="password"] {
            border: 2px solid #3498db;
            padding: 10px;
            width: 100%;
            margin-bottom: 15px;
            border-radius: 5px;
            outline: none;
        }

        .box input[type="submit"] {
            border: none;
            background: #2ecc71;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .box input[type="submit"]:hover {
            background: #27ae60;
        }

        ul.social-network {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        ul.social-network li {
            margin: 0 5px;
        }

        .social-circle li a {
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            text-align: center;
            width: 40px;
            height: 40px;
            font-size: 20px;
            color: white;
            background: #2ecc71;
            text-decoration: none;
        }

        /* Add the following rule to replace -ms-filter */
        .social-circle li a {
            filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=80);
        }
    </style>
    </head>
    <body>
        
 
        <div class="card">
            <form action="/signup" method="post" class="box" id="form">           
                <h1>Signup</h1>
                <p class="text-muted">Please enter your signup information!</p>
                <input id="username" type="text" name="username" placeholder="Full Name">


                <input id="email" type="text" name="email" placeholder="Email">
                <span id="email_valid" style="color: #b92b27;"></span>
                <input id="password" type="password" name="password" placeholder="Password" >
                <span id="pass_error"class="pass_error" style="color: #b92b27;"></span>
                <input type="submit" value="Signup">
                <span id="user_response" style="color:#ff0000;">
                    <% if (typeof message !== 'undefined') { %>
                        <%= message %>
                   <% } %>
                </span>
                <a href="login" style="text-decoration: none;"><h6 style="font-size: 12px; ">Already have an account? Login</h6></a>
                <ul class="social-network social-circle">
                    <li><a href="#" class="icoFacebook" title="Facebook"><i class="fa fa-facebook-f"></i></a></li>
                    <li><a href="#" class="icoTwitter" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#" class="icoGoogle" title="Google +"><i class="fa fa-google-plus"></i></a></li>
                </ul>
            </form>
        </div>

        <script>
            const username = document.getElementById('username');
            const email = document.getElementById('email');
            const password = document.getElementById('password');
            const form = document.getElementById('form');
            // Remove the line related to user_error since it's not present in your HTML
        
            const email_valid = document.getElementById('email_valid');
            const pass_error = document.getElementById('pass_error');
        
            form.addEventListener('submit', (e) => {
                let isValid = true; // Flag to track overall form validity
        
                // Clear previous error messages
                // Remove the line related to user_error since it's not present in your HTML
                email_valid.innerHTML = "";
                pass_error.innerHTML = "";
        
                // Validation checks
                if (username.value.trim() === '' || username.value === null) {
                    e.preventDefault();
                    // Remove the line related to user_error since it's not present in your HTML
                    isValid = false;
                }
        
                const email_check = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!email.value.match(email_check)) {
                    e.preventDefault();
                    email_valid.innerHTML = "Email is not valid";
                    isValid = false;
                }
        
                if (password.value.length < 6) {
                    e.preventDefault();
                    pass_error.innerHTML = "Password must be more than 6 characters";
                    isValid = false;
                }
        
                // Submit the form only if all validation checks pass
                if (isValid) {
                    form.submit();
                }
            });
        </script>

        
    </body>
    </html>
