                    <script>
                        document.addEventListener('DOMContentLoaded', function () {
                            const form = document.getElementById('couponForm');
                            const couponMessageSpan = document.getElementById('couponMessage');
                            const couponDiscountSpan = document.getElementById('couponDiscount'); // Get the discount span

                            form.onsubmit = async function (e) {
                                e.preventDefault(); // Prevent the default form submission

                                const couponCode = document.getElementById('couponCode').value;

                                // Send the coupon code to the server using Fetch API
                                try {
                                    const response = await fetch('/applyCoupon', {
                                        method: 'POST',
                                        headers: {
                                            'Content-Type': 'application/json',
                                        },
                                        body: JSON.stringify({ couponCode }),
                                    });

                                    const result = await response.json(); // Assuming the server sends back JSON

                                    // Handle the response
                                    if (response.ok) {
                                        // Display success message and discount
                                        couponMessageSpan.textContent = result.message || 'Coupon applied successfully!';
                                        couponMessageSpan.style.color = 'green'; // Optional: Change color for success

                                        // Assuming the discount is part of the response
                                        couponDiscountSpan.textContent = `Discount Applied: %${result.discount}`;
                                        couponDiscountSpan.style.color = 'blue'; // Optional: Change color for discount info
                                    } else {
                                        // Display error message from server or a generic error message
                                        couponMessageSpan.textContent = result.message || 'Failed to apply coupon.';
                                        couponMessageSpan.style.color = 'red'; // Optional: Change color for error
                                        couponDiscountSpan.textContent = ''; // Clear previous discount info if any
                                    }
                                } catch (error) {
                                    console.error('Error applying coupon:', error);
                                    // Display error message
                                    couponMessageSpan.textContent = 'An error occurred while applying the coupon.';
                                    couponMessageSpan.style.color = 'red';
                                    couponDiscountSpan.textContent = ''; // Clear previous discount info if any
                                }
                            };
                        });


                    </script>

