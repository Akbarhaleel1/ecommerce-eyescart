                                                                style="width: 119px; height: 103px"
                                                                alt="<%= item.product %>">
                                                            <% } else { %>
                                                                <!-- Handle case when there are no images -->
                                                                <img src="/placeholder-image.jpg"
                                                                    style="width: 119px; height: 103px"
                                                                    alt="Placeholder Image">
                                                                <% } %>
                                                    </label>
                                                </a>
                                            </div>

                                            <div class="col-md-2 my-auto">
                                                <label class="price">
                                                    <%= item.price %>
                                                </label>
                                                <h4
                                                    style="position: absolute;right: 252px; bottom: -22px; font-size: 18px; width: 6pc;">
                                                    <%= item.product%>
