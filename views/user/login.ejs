<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(to right, #b92b27, #1565c0);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            border: none;
            background: #fff;
            text-align: center;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 300px;
            max-width: 80%;
            box-sizing: border-box;
        }

        .box input[type="text"],
        .box input[type="password"] {
            border: 2px solid #3498db;
            padding: 10px;
            width: 100%;
            margin-bottom: 15px;
            border-radius: 5px;
            outline: none;
        }

        .box input[type="submit"] {
            border: none;
            background: #2ecc71;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .box input[type="submit"]:hover {
            background: #27ae60;
        }

        ul.social-network {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        ul.social-network li {
            margin: 0 5px;
        }

        .social-circle li a {
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            text-align: center;
            width: 40px;
            height: 40px;
            font-size: 20px;
            color: white;
            background: #2ecc71;
            text-decoration: none;
        }
    </style>
</head>
<body>

    <div class="card">
        <form onsubmit="return validation()" action="/login" method="post" class="box" id="form">
            <h1>Login</h1>
            <p class="text-muted">Please enter your login and password!</p>
            <div class="container">
                <input id="uname" type="text" name="username" placeholder="Username">
                <span id="name_error" style="color: red; margin-top: 5px;"></span>
            </div>
    
            <div class="container">
                <input id="pass" type="password" name="password" placeholder="Password">
                
                <span id="pass_error" style="color:#ff0000;">
                    <% if (typeof message !== 'undefined') { %>
                        <%= message %>
                    <% } %>
                </span>
            </div>
    
            <input type="submit" name="" value="Login">
            <a href="signup" style="text-decoration: none;"><h6 style="font-size: 12px;">Need an account?Signup</h6></a>
            <ul class="social-network social-circle" style="margin-top: 26px;">
                <li><a href="#" class="icoFacebook" title="Facebook"><i class="fa fa-facebook-f"></i></a></li>
                <li><a href="#" class="icoTwitter" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                <li><a href="#" class="icoGoogle" title="Google +"><i class="fa fa-google-plus"></i></a></li>
            </ul>
        </form>
    </div>
    

<script>

    const username = document.getElementById('uname')
    const password = document.getElementById('pass')
    const form = document.getElementById('form')
    const name_error = document.getElementById('name_error')
    const pass_error = document.getElementById('pass_error')


    form.addEventListener('submit',(e)=>{
        if(username.value.trim()===''||username.value===null){
            e.preventDefault();
            name_error.innerHTML="Name is required"            
        }
        if(password.value.length<6){
            e.preventDefault();
            pass_error.innerHTML="Password must be more than 6 characters"  
            
        }
    })



</script>



</body>
</html>
