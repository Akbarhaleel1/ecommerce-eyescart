<%-include('header')-%>
<style>
  .no-reviews-container {
    padding: 50px 15px;
    background-color: #f8f9fa; /* Light gray background */
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1); /* Soft shadow for depth */
}

.no-reviews-image {
    max-width: 200px; /* Adjust based on your image */
    margin-bottom: 30px;
}

.no-reviews-title {
    color: #333; /* Dark text for contrast */
    margin-bottom: 20px;
}

.no-reviews-text {
    color: #666; /* Lighter text for the description */
    margin-bottom: 30px;
}

@media (max-width: 768px) {
    .no-reviews-container {
        padding: 30px 10px;
    }
    
    .no-reviews-image {
        max-width: 150px;
    }
}

</style>
