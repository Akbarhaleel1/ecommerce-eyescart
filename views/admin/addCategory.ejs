<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <style>
    /* Apply styles to the form container */
    .card-body {
      max-width: 400px;
      margin: 0 auto;
    }

    /* Style the heading */
    .text-primary {
      color: #007bff; /* or any other color you prefer */
    }

    /* Style the input field */
    .form-control {
      width: 100%;
      padding: 8px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }

    /* Style the buttons */
    .btn-primary {
      background-color: #007bff;
      color: #fff;
      padding: 10px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      border-radius: 5px;
    }

    /* Add margin to the "Go Back" button */
    .btn-primary.mt-2 {
      margin-top: 10px;
    }
  </style>
</head>
<body>
  
  <div class="card-body">
    <h1 class="text-center text-primary">Add Category</h1>
    <form action="/addCategory" method="POST">
      <div class="mb-3 mt-4">
        <label for="categoryname" class="form-label">Category Name</label>
        <input
          type="text"
          class="form-control"
          id="categoryname"
          name="categoryname"
        />
        
        <% if (message) { %>
          <div id="err" class="alert text-center" style="color: rgb(255, 0, 0);"><%= message %></div>
        <% } %>
      </div>


      <div class="text-center login-button mb-4">
        <button type="submit" class="btn btn-primary w-100" id="add">Add</button>
        <a href="/adminCategory" class="btn btn-primary w-100 mt-2">Go Back</a>
      </div>
    </form>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script>
    // alert
  document.getElementById("add").addEventListener("click", function () {

  if (typeof message !== 'undefined') {
  alert("Category Added Successfully");
  }
 
  });

  // invalid message show timout
  document.addEventListener("DOMContentLoaded", function() {
    var messageElement = document.getElementById("err");
    

    if (messageElement && messageElement.textContent.trim() !== "") {
      setTimeout(function() {
        messageElement.textContent = "";
      }, 2000); 
    }
  });
</script>
</body>
</html>
